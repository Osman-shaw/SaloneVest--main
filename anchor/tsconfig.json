{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "mocha"],
    "noImplicitAny": false
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", "target"],
  "ts-node": {
    "transpileOnly": true
  }
}
